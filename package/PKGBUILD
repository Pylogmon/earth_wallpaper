# Maintainer: Ambition_echo <ambition_echo@outlook.com>

resname=earth_wallpaper
pkgname=earth-wallpaper
pkgver=1.0.4.r1.gd72f550
pkgrel=1
pkgdesc="实时获取地球照片作为壁纸"
arch=('x86_64')
url="https://jihulab.com/ambition-echo/earth_wallpaper"
license=('GPL3')

depends=('qt5-base')
makedepends=('cmake' 'git' 'make')

source=("git+$url.git")
sha256sums=("SKIP")

pkgver() {
    cd $resname
    ( set -o pipefail
        git describe --long 2>/dev/null | sed 's/\([^-]*-g\)/r\1/;s/-/./g' ||
        printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
    )
}

build() {
    mkdir build
    cd build
    cmake ../$resname
    make
}

package() {
    cd $resname
    install -Dm644 ./resource/icon.png $pkgdir/opt/$resname/icon.png
    install -Dm644 ./package/usr/share/applications/$resname.desktop $pkgdir/usr/share/applications/$resname.desktop
    cd ../build
    install -D ./$resname $pkgdir/opt/$resname/$resname

    install -D ./scripts/* -t $pkgdir/opt/$resname/scripts
    install -Dm666 ./template/* -t $pkgdir/opt/$resname/template
}